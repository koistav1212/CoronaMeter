<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp"
     android:background="#fff"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:padding="20dp"
        android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:transitionName="logo_image"
        android:id="@+id/splash_img2"
        android:src="@drawable/fastfood"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:transitionName="logo_name"
        android:textColor="#FF9800"
        android:textStyle="bold"
        android:fontFamily="casual"
        android:text="WELCOME"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FF9800"
        android:transitionName="login_tran"
        android:fontFamily="cursive"
        android:text="SignUp to start your Journey"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:hint="FULLNAME"
            android:textColorHint="@color/purple_200"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="#F0BFF1"
                android:textColor="#000000"
                android:textStyle="bold">

            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:counterEnabled="true"
            android:textColorHint="@color/purple_200"
            android:id="@+id/username"
            android:hint="UserName"
            app:counterTextColor="@color/purple_500"
            app:counterMaxLength="15"
            android:transitionName="username_tran"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <EditText
                android:textColor="#000000"
                android:textStyle="bold"
                android:inputType="text"
                android:background="#F0BFF1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
android:id="@+id/email"
            android:textColorHint="@color/purple_200"
            android:hint="Email"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <EditText
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="#F0BFF1"
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/phn_no"
            android:layout_height="wrap_content"
            android:textColorHint="@color/purple_200"
            android:hint="Phone Number"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <EditText
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="#F0BFF1"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               >

            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:transitionName="pass_tran"
          android:id="@+id/password"
            android:textColorHint="@color/purple_200"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
            <EditText
                android:textColor="#000000"
                android:textStyle="bold"
                android:inputType="textPassword"
                android:background="#F0BFF1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password">

            </EditText>
        </com.google.android.material.textfield.TextInputLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:textColor="@color/white"
        android:text="GO"
        android:transitionName="go_tran"
 android:id="@+id/go_btn2"
        android:textSize="20sp"
        android:textStyle="bold"

        />
        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:layout_marginTop="10dp"
            android:transitionName="button_tran"

            android:textColor="@color/white"
            android:text="Already have an account? Log In"
            android:textSize="15sp"
            android:textStyle="bold"
            />


    </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>