<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onBoard3"
    style="@style/roundedImageViewRounded"
    android:background="#B92B5C">

    <!-- TODO: Update blank fragment layout -->
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:lottie_rawRes="@raw/sanitiser_precaution"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:id="@+id/onboardImg3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="#F294B4"
        android:text="Corona Meter"
        android:id="@+id/onboardName3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textStyle="normal"
        android:text="Skip"

        android:textColor="@color/white"
        android:id="@+id/onboardSkip3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:padding="30dp"
        android:textSize="17sp"
        android:textColor="#F8F8F8"
        android:layout_height="wrap_content"
        android:id="@+id/onboardDescribe3"
        android:text="Stay Sanitized and get all Current info at your fingertips."
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/onboardImg3"
        app:layout_constraintRight_toRightOf="parent"/>
<androidx.appcompat.widget.AppCompatButton
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/letsgo"
    app:layout_constraintLeft_toLeftOf="parent"
    android:background="@drawable/custom_button1"
    android:layout_marginTop="20dp"
    android:text="Let's GO"
    android:textColor="@color/white"
    style="@style/roundedImageViewRounded"
    app:layout_constraintTop_toBottomOf="@id/onboardDescribe3"
    app:layout_constraintRight_toRightOf="parent"
    />
</androidx.constraintlayout.widget.ConstraintLayout>